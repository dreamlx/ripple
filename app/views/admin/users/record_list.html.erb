<table class="table">
  <thead>
    <tr>
      <th><%= Record.human_attribute_name(:date) %></th>
      <th><%= Project.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dates.each do |date| %>
      <tr>
        <td><%= date %></td>
        <td><%= Project.where(id: @records.where(date: date).pluck(:project_id)).pluck(:name).join(",") %></td>
      </tr>
    <% end %>
  </tbody>
</table>