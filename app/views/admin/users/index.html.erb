<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:nickname) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.name %></td>
        <td><%= link_to t(:record_list), record_list_admin_user_path(user) %></td>
        <td><%= link_to t(:edit), edit_admin_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="panel panel-default">
  <div class="panel-heading"><%= t(:new) %></div>
  <div class="panel-body">
    <%= render 'form' %>
  </div>
</div>

