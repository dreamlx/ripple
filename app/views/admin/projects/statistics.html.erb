<h1><%= Date.today.to_s(:month_and_year) %></h1>
<table class="table table-bordered">
  <tr>
    <th></th>
    <% (Date.today.beginning_of_month..Date.today.end_of_month).each do |date| %>
      <th class="text-center" style="color:<%= "red" if (date.strftime("%w").to_i == 0 || date.strftime("%w").to_i == 6) %>">
        <%= date.to_s(:month_and_day) %>
        <%= Admin::WEEKDAYS[date.strftime("%w").to_i] %>
      </th>
    <% end %>
  </tr>
  <% User.all.each do |user| %>
    <tr>
      <td>
        <strong><%= user.name %></strong>
      </td>
      <% (Date.today.beginning_of_month..Date.today.end_of_month).each do |date| %>
        <td>
          <%= Project.where(id: user.records.where(date: date).pluck(:project_id)).pluck(:name).join(",") %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>